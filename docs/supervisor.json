{
    "apiVersion": "v1",
    "baseUrl": "/api",
    "role": "SUPERVISOR",
    "description": "Supervisor role endpoints - task management, AI decision review, discrepancy resolution, monitoring, inventory overview, and read-only access to products/locations/users",
    "controllers": [
        {
            "name": "AuthController",
            "basePath": "/auth",
            "description": "Authentication",
            "endpoints": [
                {
                    "method": "POST",
                    "path": "/login",
                    "operationId": "login",
                    "summary": "Supervisor login",
                    "security": "PUBLIC",
                    "requestBody": {
                        "username": "string",
                        "password": "string"
                    },
                    "responses": {
                        "200": {
                            "accessToken": "string (JWT)",
                            "user": {
                                "id": "UUID",
                                "username": "string",
                                "fullName": "string",
                                "role": "SUPERVISOR"
                            }
                        }
                    }
                },
                {
                    "method": "POST",
                    "path": "/logout",
                    "operationId": "logout",
                    "summary": "Supervisor logout",
                    "security": "BEARER_TOKEN",
                    "responses": {
                        "200": "success"
                    }
                }
            ]
        },
        {
            "name": "TaskManagementController",
            "basePath": "/tasks",
            "description": "Create, assign, reassign, and delete tasks",
            "endpoints": [
                {
                    "method": "POST",
                    "path": "/create",
                    "operationId": "createTask",
                    "summary": "Create a new task/transaction",
                    "security": "BEARER_TOKEN",
                    "requestBody": {
                        "type": "string (RECEIPT/TRANSFER/PICKING/DELIVERY)",
                        "reference": "string (optional, auto-generated if not provided)",
                        "priority": "string (optional, default MEDIUM - LOW/MEDIUM/HIGH/URGENT)",
                        "assignedToId": "UUID (optional)",
                        "notes": "string (optional)"
                    },
                    "responses": {
                        "201": {
                            "id": "UUID",
                            "type": "string",
                            "reference": "string",
                            "status": "PENDING",
                            "priority": "string",
                            "createdAt": "LocalDateTime",
                            "assignedTo": {
                                "id": "UUID",
                                "username": "string",
                                "fullName": "string"
                            }
                        }
                    }
                },
                {
                    "method": "PUT",
                    "path": "/{id}/assign",
                    "operationId": "assignTask",
                    "summary": "Assign a task to an employee",
                    "security": "BEARER_TOKEN",
                    "pathParameters": [
                        {
                            "name": "id",
                            "type": "UUID"
                        }
                    ],
                    "requestBody": {
                        "assignedToId": "UUID (required)"
                    },
                    "responses": {
                        "200": {
                            "id": "UUID",
                            "status": "string",
                            "assignedTo": {
                                "id": "UUID",
                                "username": "string",
                                "fullName": "string"
                            },
                            "assignedAt": "LocalDateTime"
                        }
                    }
                },
                {
                    "method": "GET",
                    "path": "",
                    "operationId": "getAllTasks",
                    "summary": "Get all tasks (not just mine)",
                    "security": "BEARER_TOKEN",
                    "queryParameters": [
                        {
                            "name": "status",
                            "type": "string",
                            "required": false,
                            "enum": [
                                "DRAFT",
                                "PENDING",
                                "IN_PROGRESS",
                                "COMPLETED",
                                "CANCELLED",
                                "FAILED"
                            ]
                        }
                    ],
                    "responses": {
                        "200": {
                            "type": "array",
                            "items": {
                                "id": "UUID",
                                "type": "string",
                                "reference": "string",
                                "status": "string",
                                "priority": "string",
                                "createdAt": "LocalDateTime",
                                "assignedAt": "LocalDateTime",
                                "assignedTo": {
                                    "id": "UUID",
                                    "username": "string",
                                    "fullName": "string"
                                },
                                "notes": "string"
                            }
                        }
                    }
                },
                {
                    "method": "PUT",
                    "path": "/{id}/reassign",
                    "operationId": "reassignTask",
                    "summary": "Reassign a task to a different employee",
                    "security": "BEARER_TOKEN",
                    "pathParameters": [
                        {
                            "name": "id",
                            "type": "UUID"
                        }
                    ],
                    "requestBody": {
                        "assignedToId": "UUID (required)"
                    },
                    "responses": {
                        "200": {
                            "id": "UUID",
                            "assignedTo": {
                                "id": "UUID",
                                "username": "string",
                                "fullName": "string"
                            },
                            "assignedAt": "LocalDateTime"
                        }
                    }
                },
                {
                    "method": "DELETE",
                    "path": "/{id}",
                    "operationId": "deleteTask",
                    "summary": "Delete a task",
                    "security": "BEARER_TOKEN",
                    "pathParameters": [
                        {
                            "name": "id",
                            "type": "UUID"
                        }
                    ],
                    "responses": {
                        "200": "Task deleted successfully"
                    }
                }
            ]
        },

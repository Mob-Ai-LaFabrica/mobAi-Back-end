            {
              "name": "warehouseId",
              "type": "UUID",
              "required": false
            },
            {
              "name": "zone",
              "type": "string",
              "required": false
            },
            {
              "name": "type",
              "type": "string",
              "required": false,
              "enum": ["RECEIVING", "STORAGE", "PICKING", "EXPEDITION"]
            },
            {
              "name": "active",
              "type": "boolean",
              "required": false
            },
            {
              "name": "page",
              "type": "integer",
              "default": 0
            },
            {
              "name": "size",
              "type": "integer",
              "default": 50
            }
          ],
          "responses": {
            "200": {
              "content": "array of locations with coordinates"
            }
          }
        },
        {
          "method": "GET",
          "path": "/{locationId}",
          "operationId": "getLocationById",
          "summary": "Get location details",
          "security": "BEARER_TOKEN (ADMIN)",
          "pathParameters": [
            {
              "name": "locationId",
              "type": "UUID"
            }
          ],
          "responses": {
            "200": {
              "id": "UUID",
              "code": "string",
              "warehouseCode": "string",
              "zone": "string",
              "type": "string",
              "positionX": "double",
              "positionY": "double",
              "positionZ": "double",
              "distanceFromReceipt": "double",
              "distanceFromExpedition": "double",
              "active": "boolean",
              "currentStock": "array (products stored here)"
            }
          }
        },
        {
          "method": "POST",
          "path": "",
          "operationId": "createLocation",
          "summary": "Create new location",
          "security": "BEARER_TOKEN (ADMIN)",
          "requestBody": {
            "code": "string (required, unique)",
            "warehouseId": "UUID (required)",
            "zone": "string (optional)",
            "type": "string (required, enum)",
            "positionX": "double (optional)",
            "positionY": "double (optional)",
            "positionZ": "double (optional, default 0)"
          },
          "responses": {
            "201": "Created location object"
          }
        },
        {
          "method": "PUT",
          "path": "/{locationId}",
          "operationId": "updateLocation",
          "summary": "Update location",
          "security": "BEARER_TOKEN (ADMIN)",
          "pathParameters": [
            {
              "name": "locationId",
              "type": "UUID"
            }
          ],
          "requestBody": {
            "zone": "string (optional)",
            "type": "string (optional)",
            "positionX": "double (optional)",
            "positionY": "double (optional)",
            "active": "boolean (optional)"
          },
          "responses": {
            "200": "Updated location object"
          }
        },
        {
          "method": "DELETE",
          "path": "/{locationId}",
          "operationId": "deleteLocation",
          "summary": "Delete location (soft delete)",
          "security": "BEARER_TOKEN (ADMIN)",
          "pathParameters": [
            {
              "name": "locationId",
              "type": "UUID"
            }
          ],
          "responses": {
            "200": {
              "message": "Location deleted successfully"
            }
          }
        },
        {
          "method": "POST",
          "path": "/bulk-import",
          "operationId": "bulkImportLocations",
          "summary": "Bulk import locations from CSV",
          "description": "Import warehouse locations with coordinates from CSV file",
          "security": "BEARER_TOKEN (ADMIN)",
          "requestBody": {
            "type": "multipart/form-data",
            "file": "CSV file with columns: code, zone, type, positionX, positionY, positionZ, etc."
          },
          "responses": {
            "200": {
              "imported": "integer",
              "skipped": "integer",
              "errors": "array"
            }
          }
        }
      ]
    },

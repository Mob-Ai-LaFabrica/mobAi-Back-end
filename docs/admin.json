{
  "apiVersion": "v1",
  "baseUrl": "/api/v1",
  "role": "ADMIN",
  "description": "Complete ADMIN endpoints for warehouse management system - hackathon MVP",
  "controllers": [
    {
      "name": "AuthController",
      "basePath": "/auth",
      "description": "Authentication (same as other roles)",
      "endpoints": [
        {
          "method": "POST",
          "path": "/login",
          "operationId": "login",
          "security": "PUBLIC",
          "requestBody": {
            "username": "string",
            "password": "string"
          },
          "responses": {
            "200": {
              "accessToken": "string (JWT)",
              "user": {
                "id": "UUID",
                "username": "string",
                "fullName": "string",
                "role": "string (ADMIN)"
              }
            }
          }
        },
        {
          "method": "POST",
          "path": "/logout",
          "operationId": "logout",
          "security": "BEARER_TOKEN",
          "responses": {
            "200": "success"
          }
        }
      ]
    },
    {
      "name": "UserManagementController",
      "basePath": "/admin/users",
      "description": "Complete user CRUD and management",
      "endpoints": [
        {
          "method": "GET",
          "path": "",
          "operationId": "getAllUsers",
          "summary": "Get all users with current positions",
          "security": "BEARER_TOKEN (ADMIN)",
          "queryParameters": [
            {
              "name": "role",
              "type": "string",
              "required": false,
              "enum": ["EMPLOYEE", "SUPERVISOR", "ADMIN"]
            },
            {
              "name": "active",
              "type": "boolean",
              "required": false
            },
            {
              "name": "page",
              "type": "integer",
              "default": 0
            },
            {
              "name": "size",
              "type": "integer",
              "default": 20
            }
          ],
          "responses": {
            "200": {
              "content": [
                {
                  "id": "UUID",
                  "username": "string",
                  "fullName": "string",
                  "email": "string",
                  "role": "string",
                  "active": "boolean",
                  "currentPositionX": "double (nullable)",
                  "currentPositionY": "double (nullable)",
                  "lastPositionUpdate": "LocalDateTime (nullable)",
                  "currentTask": "object (nullable - transaction if assigned)",
                  "createdAt": "LocalDateTime"
                }
              ],
              "totalElements": "long",
              "totalPages": "integer"
            }
          }
        },
        {
          "method": "GET",
          "path": "/{userId}",
          "operationId": "getUserById",
          "summary": "Get user details",
          "security": "BEARER_TOKEN (ADMIN)",
          "pathParameters": [
            {
              "name": "userId",
              "type": "UUID"
            }
          ],
          "responses": {
            "200": {
              "id": "UUID",
              "username": "string",
              "fullName": "string",
              "email": "string",
              "role": "string",
              "active": "boolean",
              "currentPositionX": "double",
              "currentPositionY": "double",
              "lastPositionUpdate": "LocalDateTime",
              "createdAt": "LocalDateTime",
              "updatedAt": "LocalDateTime"
            }
          }
        },
        {
          "method": "POST",
          "path": "",
          "operationId": "createUser",
          "summary": "Create new user",
          "security": "BEARER_TOKEN (ADMIN)",
          "requestBody": {
            "username": "string (required, unique)",
            "password": "string (required, min 8 chars)",
            "fullName": "string (required)",
            "email": "string (optional)",
            "role": "string (required, enum: EMPLOYEE/SUPERVISOR/ADMIN)"
          },
          "responses": {
            "201": {
              "id": "UUID",
              "username": "string",
              "fullName": "string",
              "role": "string",
              "active": "boolean",
              "createdAt": "LocalDateTime"
            }
          }
        },
        {
          "method": "PUT",
          "path": "/{userId}",
          "operationId": "updateUser",
          "summary": "Update user",
          "security": "BEARER_TOKEN (ADMIN)",
          "pathParameters": [
            {
              "name": "userId",
              "type": "UUID"
            }
          ],
          "requestBody": {
            "fullName": "string (optional)",
            "email": "string (optional)",
            "role": "string (optional)",
            "active": "boolean (optional)"
          },
          "responses": {
            "200": "Updated user object"
          }
        },
        {
          "method": "DELETE",
          "path": "/{userId}",
          "operationId": "deleteUser",
          "summary": "Delete user (soft delete - set active=false)",
          "security": "BEARER_TOKEN (ADMIN)",
          "pathParameters": [
            {
              "name": "userId",
              "type": "UUID"
            }
          ],
          "responses": {
            "200": {
              "message": "User deleted successfully"
            }
          }
        },
        {
          "method": "PUT",
          "path": "/{userId}/reset-password",
          "operationId": "resetUserPassword",
          "summary": "Reset user password",
          "security": "BEARER_TOKEN (ADMIN)",
          "pathParameters": [
            {
              "name": "userId",
              "type": "UUID"
            }
          ],
          "requestBody": {
            "newPassword": "string (required)"
          },
          "responses": {
            "200": {
              "message": "Password reset successfully"
            }
          }
        }
      ]
    },
    {
      "name": "ProductManagementController",
      "basePath": "/admin/products",
      "description": "Complete product CRUD",
      "endpoints": [
        {
          "method": "GET",
          "path": "",
          "operationId": "getAllProducts",
          "summary": "Get all products",
          "security": "BEARER_TOKEN (ADMIN)",
          "queryParameters": [
            {
              "name": "category",
              "type": "string",
              "required": false
            },
            {
              "name": "active",
              "type": "boolean",
              "required": false
            },
            {
              "name": "search",
              "type": "string",
              "required": false,
              "description": "Search by SKU or name"
            },
            {
              "name": "page",
              "type": "integer",
              "default": 0
            },
            {
              "name": "size",
              "type": "integer",
              "default": 20
            }
          ],
          "responses": {
            "200": {
              "content": "array of products",
              "totalElements": "long"
            }
          }
        },
        {
          "method": "GET",
          "path": "/{productId}",
          "operationId": "getProductById",
          "summary": "Get product details",
          "security": "BEARER_TOKEN (ADMIN)",
          "pathParameters": [
            {
              "name": "productId",
              "type": "UUID"
            }
          ],
          "responses": {
            "200": {
              "id": "UUID",
              "sku": "string",
              "name": "string",
              "unitOfMeasure": "string",
              "category": "string",
              "price": "double",
              "minStock": "integer",
              "maxStock": "integer",
              "active": "boolean",
              "barcodes": "array",
              "createdAt": "LocalDateTime",
              "updatedAt": "LocalDateTime"
            }
          }
        },
        {
          "method": "POST",
          "path": "",
          "operationId": "createProduct",
          "summary": "Create new product",
          "security": "BEARER_TOKEN (ADMIN)",
          "requestBody": {
            "sku": "string (required, unique)",
            "name": "string (required)",
            "unitOfMeasure": "string (required)",
            "category": "string (optional)",
            "price": "double (optional)",
            "minStock": "integer (optional)",
            "maxStock": "integer (optional)",
            "barcodes": [
              {
                "barcode": "string (required)",
                "isPrimary": "boolean (default false)"
              }
            ]
          },
          "responses": {
            "201": "Created product object"
          }
        },
        {
          "method": "PUT",
          "path": "/{productId}",
          "operationId": "updateProduct",
          "summary": "Update product",
          "security": "BEARER_TOKEN (ADMIN)",
          "pathParameters": [
            {
              "name": "productId",
              "type": "UUID"
            }
          ],
          "requestBody": {
            "name": "string (optional)",
            "category": "string (optional)",
            "price": "double (optional)",
            "minStock": "integer (optional)",
            "maxStock": "integer (optional)",
            "active": "boolean (optional)"
          },
          "responses": {
            "200": "Updated product object"
          }
        },
        {
          "method": "DELETE",
          "path": "/{productId}",
          "operationId": "deleteProduct",
          "summary": "Delete product (soft delete)",
          "security": "BEARER_TOKEN (ADMIN)",
          "pathParameters": [
            {
              "name": "productId",
              "type": "UUID"
            }
          ],
          "responses": {
            "200": {
              "message": "Product deleted successfully"
            }
          }
        },
        {
          "method": "POST",
          "path": "/{productId}/barcodes",
          "operationId": "addBarcode",
          "summary": "Add barcode to product",
          "security": "BEARER_TOKEN (ADMIN)",
          "pathParameters": [
            {
              "name": "productId",
              "type": "UUID"
            }
          ],
          "requestBody": {
            "barcode": "string (required)",
            "isPrimary": "boolean (default false)"
          },
          "responses": {
            "201": "Created barcode object"
          }
        },
        {
          "method": "DELETE",
          "path": "/{productId}/barcodes/{barcodeId}",
          "operationId": "removeBarcode",
          "summary": "Remove barcode from product",
          "security": "BEARER_TOKEN (ADMIN)",
          "pathParameters": [
            {
              "name": "productId",
              "type": "UUID"
            },
            {
              "name": "barcodeId",
              "type": "UUID"
            }
          ],
          "responses": {
            "200": {
              "message": "Barcode removed successfully"
            }
          }
        }
      ]
    },
    {
      "name": "LocationManagementController",
